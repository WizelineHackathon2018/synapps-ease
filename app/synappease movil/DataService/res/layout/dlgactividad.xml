<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical" >
    
        <Spinner
            android:id="@+id/cbxClientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="#EDEDED" />

        <Spinner
            android:id="@+id/cbxTipoActividad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="#EDEDED" />
        
        <EditText
            android:id="@+id/txtdlgDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/cbxAutos"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#EDEDED"
            android:ems="10"
            android:hint="DESCRIPCION" />

        <EditText
            android:id="@+id/txtdlgObservaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txtGasolina"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#EDEDED"
            android:ems="10"
            android:hint="OBSERVACIONES" />


	<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

            <EditText
                android:id="@+id/txtdlgHoraInicial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dos_dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#EDEDED"
                android:ems="10"
                android:hint="HORA INICIAL"
                android:padding="@dimen/dos_dp" />
            
                <com.System.UI.kButton
                    android:id="@+id/btnHoraInicial"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="@dimen/uno_dp"
                    android:layout_marginLeft="@dimen/uno_dp"
                    android:layout_marginRight="@dimen/uno_dp"
                    android:layout_marginTop="@dimen/uno_dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_buscar"
                    android:textColor="#FFFFFF" />
        
    </LinearLayout>

	<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

            <EditText
                android:id="@+id/txtdlgHoraFinal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dos_dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#EDEDED"
                android:ems="10"
                android:hint="HORA FINAL"
                android:padding="@dimen/dos_dp" />
            
                <com.System.UI.kButton
                    android:id="@+id/btnHoraFinal"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="@dimen/uno_dp"
                    android:layout_marginLeft="@dimen/uno_dp"
                    android:layout_marginRight="@dimen/uno_dp"
                    android:layout_marginTop="@dimen/uno_dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_buscar"
                    android:textColor="#FFFFFF" />
        
    </LinearLayout>
	
	<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

            <EditText
                android:id="@+id/txtdlgFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dos_dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#EDEDED"
                android:ems="10"
                android:hint="FECHA"
                android:padding="@dimen/dos_dp" />
            
                <com.System.UI.kButton
                    android:id="@+id/btnHoraFecha"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="@dimen/uno_dp"
                    android:layout_marginLeft="@dimen/uno_dp"
                    android:layout_marginRight="@dimen/uno_dp"
                    android:layout_marginTop="@dimen/uno_dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_buscar"
                    android:textColor="#FFFFFF" />
        
    </LinearLayout>


        <EditText
            android:id="@+id/txtdlgMotivoReagenda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#EDEDED"
            android:ems="10"
            android:hint="MOTIVO REAGENDA" />
			
		
	<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <com.System.UI.kButton
            android:id="@+id/btn_no"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:background="#43609B"
            android:clickable="true"
            android:text="Cancelar"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <com.System.UI.kButton
            android:id="@+id/btn_yes"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="#43609B"
            android:clickable="true"
            android:text="Aceptar"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
        
    </LinearLayout>

</LinearLayout>